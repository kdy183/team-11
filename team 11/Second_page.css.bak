body {
  margin: 0;
  padding: 0;
}

h2{
	font-family:Impact;
	text-align:center;
}
h3{
	font-family:Impact;
	text-align:center;
}
	
#header {
  padding: 60px;
  text-align:center;
  font-family: Impact;
  font-size: 20px;
}

#navbar {
  background-color: #383838;
  padding: 14px 0;
}
#navbar a {
  color: white;
  padding: 14px 20px;
  text-decoration: none;
  text-align: center;
}
#navbar a:hover {
  background-color: #dddddd;
  color: black;
}

#features {
	background: #353D40;
	border-bottom: solid 1px #272e31;
	padding: 45px 0 45px 0;
	color: #a0a8ab;
}
 
.shirt{
	padding-left:10px;
	margin:40px;
}
.cap{
	margin:40px;
}
	
.d_shirt{
	float:left;
}

.fakeimg {
  clear: both;
  background-color: #aaaaaa;
  width: 100%;
  height: 300px;
}



.main {
  float: left;
  width: 65%;
  background-color: white;
  padding: 20px;
}



.about {
  float: left;
  width: 25%;
  background-color: #f1f1f1;
  padding: 20px;
  margin-top:20px;
  height:656px;
}
.stussylogo{
	margin-left:60px;
}
.stussylink{
	text-align:center;
}

@media (max-width: 700px) {
  #navbar a {
    display: block;
  }
  .about {
    clear: both;
    width: 95%;
  }
  .main {
    clear: both;
    width: 95%;
  }
}